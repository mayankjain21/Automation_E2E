<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel="tests" name="Suite">
	
	<groups>
		<run>
			<include name="Purchase"></include>
		</run>
	</groups>
    <test thread-count="5" name="Submit Order Test">
        <classes>
            <class name="LearnSelenium.tests.SubmitOrderTest"/>
        </classes>
    </test> <!-- Submit Order Test -->

    <test thread-count="5" name="Error Validation Test">
        <classes>
            <class name="LearnSelenium.tests.ErrorValidationTest"/>
            
        </classes>
    </test> <!-- Error Validation Test -->
</suite> <!-- Suite -->
